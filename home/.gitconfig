; Use `include.path` [~/.gituser] file to store user settings for git 1.7.10+
[include]
    path = .gituser
[core]
    excludesfile = ~/.gitignore
    fileMode = false
    autocrlf = input
    editor = vim
[push]
    default = upstream
[pull]
    default = current
    rebase = true
[alias]
    s = status
    h = rev-parse HEAD
    ci = commit
    br = branch
    co = checkout
    aa = add --all
    rev = remote -v
    logg = log --graph --oneline --decorate --all
    logn = log --stat --graph --oneline --decorate --all
    logl = log --pretty=short -u -L
    diffn = diff --name-status
    diffs = diff --staged
